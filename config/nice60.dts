/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <common/nordic/nrf52840_uf2_boot_mode.dtsi>

#include <dt-bindings/led/led.h>
#include <dt-bindings/zmk/matrix_transform.h>

#include <layouts/common/60percent/ansi.dtsi>

#include "nice60-pinctrl.dtsi"

/ {
    model = "nice!60";
    compatible = "nice,60";

    chosen {
        zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
    };
        default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <11>;
        map = <
RC(0,0)         RC(0,1) RC(6,1) RC(0,2) RC(5,2)      RC(3,3) RC(9,3) RC(3,4) RC(8,4)      RC(2,5) RC(8,5) RC(2,6) RC(4,6)  RC(9,6) RC(2,7) RC(7,7)
RC(1,0) RC(6,0) RC(1,1) RC(7,1) RC(1,2) RC(6,2) RC(10,2) RC(4,3) RC(10,3) RC(4,4) RC(9,4) RC(3,5) RC(9,5) RC(3,6) RC(5,6) RC(10,6) RC(3,7) RC(8,7)  RC(0,8) RC(5,8) RC(9,8) RC(3,9)
RC(2,0)   RC(7,0) RC(2,1) RC(8,1) RC(2,2) RC(7,2) RC(0,3) RC(5,3)  RC(0,4) RC(5,4) RC(10,4) RC(4,5) RC(10,5)               RC(0,7) RC(4,7) RC(9,7)  RC(1,8) RC(6,8) RC(10,8) RC(4,9)
RC(3,0)    RC(8,0) RC(3,1) RC(9,1) RC(3,2) RC(8,2) RC(1,3) RC(6,3)  RC(1,4) RC(6,4) RC(0,5) RC(5,5) RC(0,6)   RC(6,6)                               RC(2,8) RC(7,8) RC(0,9)
RC(4,0)  RC(9,0) RC(4,1) RC(10,1) RC(4,2) RC(9,2) RC(2,3) RC(7,3)  RC(2,4) RC(7,4) RC(1,5) RC(6,5)         RC(7,6)                 RC(5,7)          RC(3,8) RC(8,8) RC(1,9) RC(5,9)
RC(5,0)   RC(10,0) RC(5,1)                              RC(8,3)                            RC(7,5)   RC(1,6)   RC(8,6)     RC(1,7) RC(6,7) RC(10,7)     RC(4,8)      RC(2,9)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";
        row-gpios
            = <&gpio0 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* fila 0 */
            , <&gpio0 8  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* fila 1 */
            , <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* fila 2 */
            , <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* fila 3 */
            , <&gpio0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* fila 4 */
            , <&gpio0 24 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* fila 5 */
            , <&gpio1 0  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* fila 6 */
            , <&gpio0 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* fila 7 */
            , <&gpio1 4  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* fila 8 */
            , <&gpio1 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* fila 9 */
            , <&gpio0 31  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> /* fila 10 */
            ;
        col-gpios
            = <&gpio0 29 GPIO_ACTIVE_HIGH> /* col 0 */
            , <&gpio0 2  GPIO_ACTIVE_HIGH> /* col 1 */
            , <&gpio1 15 GPIO_ACTIVE_HIGH> /* col 2 */
            , <&gpio1 13 GPIO_ACTIVE_HIGH> /* col 3 */
            , <&gpio1 11 GPIO_ACTIVE_HIGH> /* col 4 */
            , <&gpio0 10 GPIO_ACTIVE_HIGH> /* col 5 */
            , <&gpio0 9  GPIO_ACTIVE_HIGH> /* col 6 */
            , <&gpio1 1  GPIO_ACTIVE_HIGH> /* col 7 */
            , <&gpio1 2  GPIO_ACTIVE_HIGH> /* col 8 */
            , <&gpio1 7  GPIO_ACTIVE_HIGH> /* col 9 */
            ;
    };




    leds {
        compatible = "gpio-leds";
        blue_led: led_0 {
            gpios = <&gpio0 26 GPIO_ACTIVE_HIGH>;
        };
    };

    // Node name must match original "EXT_POWER" label to preserve user settings.
    EXT_POWER {
        compatible = "zmk,ext-power-generic";
        control-gpios = <&gpio0 5 GPIO_ACTIVE_LOW>;
    };

    vbatt: vbatt {
        compatible = "zmk,battery-voltage-divider";
        io-channels = <&adc 2>;
        output-ohms = <2000000>;
        full-ohms = <(2000000 + 806000)>;
    };
};

/*
